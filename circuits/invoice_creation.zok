import "hashes/sha256/512bitPacked" as sha256packed;

def main(private field token, private field issuer, private field client, private field amount, private field dueDate, private field nextInvoiceId) -> field[2] {
    assert(issuer != 0);
    assert(client != 0);
    assert(amount > 0);
    assert(dueDate > 0);
    assert(nextInvoiceId > 0);

    field[4] preimage = [amount, dueDate, nextInvoiceId, 0];
    field[2] hash = sha256packed(preimage);
    
    return hash;
}
